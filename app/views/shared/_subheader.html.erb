<div class="row page-subheader">
  <nav class="col-xs-12">
    <ul>
      <%= active_link_to t('.actions'), main_app.application_activities_path(@application), wrap_tag: 'li' %>
      <%= active_link_to t('.extensions'), main_app.application_extensions_path(@application),
        active: [[local_assigns[:controller] || 'extensions'], [local_assigns[:action] || 'index']],
        wrap_tag: 'li', class: (local_assigns[:controller].nil? ? "" : "extension" )
      %>
      <%= active_link_to t('.settings'), main_app.edit_application_path(@application), wrap_tag: 'li' %>
    </ul>
  </nav>
</div>
