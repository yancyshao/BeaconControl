    <div class="modal-content">
      <div class="modal-header gray-light">
        <div class="modal-header-content">
          <h4 class="modal-title"><%= raw t('walkthrough.guide.title') %></h4>
          <p>
            <%= raw t('walkthrough.guide.body') %>
          </p>
        </div>
      </div>
      <div class="modal-body">
        <a href="<%= '/walkthrough/intro' %>" class="btn btn-success content-button" target="_blank">
