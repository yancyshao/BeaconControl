<%= simple_form_for(application, html: { class: %W[header-action navbar-form navbar-right] }, wrapper: :simple_with_errors) do |f| %>
  <div class="form-group">
    <%= f.input :name, placeholder: t('.form_placeholder'), class: %W[form-control], required: true %>
  </div>
  <%= f.button :submit, t('.add_new'), class: %W[btn btn-sm btn-success hidden-xs] %>
  <%= f.button :submit, t('.add_new'), class: %W[btn btn-sm btn-success btn-block visible-xs] %>
<% end %>
