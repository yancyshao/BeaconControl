<%= render layout: 'admins/shared/layout' do %>

  <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>

    <h2><%= t('.restore_password') %></h2>

    <%= f.error_notification %>

    <%= f.input :email, :required => true, :autofocus => true, label: false, placeholder: t(".email") %>
    <%= f.button :submit, t('.send'), class: 'btn btn-sm btn-success pull-right' %>

    <%= link_to t('.return_to_login'), new_session_path(resource_name) %>

  <% end %>
<% end %>
