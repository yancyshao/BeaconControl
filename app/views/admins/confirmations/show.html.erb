<%= render layout: 'admins/shared/layout' do %>
  <%= simple_form_for(resource, :as => resource_name, :url => update_admin_confirmation_path(confirmation_token: params[:confirmation_token]), html: { method: :put }) do |f| %>

    <h2><%= t('.set_password') %></h2>

    <div class="alert alert-error"></div>

    <%= f.input :password, required: true, autofocus: true, label: false, placeholder: t('.password'), autocomplete: "off" %>
    <%= f.input :password_confirmation, required: true, label: false, placeholder: t('.password_confirmation'), autocomplete: "off" %>

    <%= f.button :submit, t(".set_password"), class: %W[btn btn-sm btn-success pull-right] %>

    <%= link_to t('.return_to_login'), new_session_path(resource_name) %>

  <% end %>
<% end %>
