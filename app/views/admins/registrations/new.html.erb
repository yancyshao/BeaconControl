<%= render layout: 'admins/shared/layout' do %>

  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

    <h2><%= t('.sign_up') %></h2>

    <%= f.error_notification %>

    <%= f.input :email, :required => true, :autofocus => true, label: false, placeholder: t(".email") %>
    <%= f.button :submit, t('.sign_up'), class: %W[btn btn-sm btn-success pull-right] %>

    <%= link_to "#{t('.have_account')} #{t('.log_in')}", new_session_path(resource_name) %><br />

  <% end %>
<% end %>
