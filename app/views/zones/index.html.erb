<% content_for :header_breadcrumbs do %>
  <span><%= t('.title') %></span>
<% end %>

<% content_for :header_back_url do %>
<% end %>

<ul class="items-list zones-list">
  <% @zones.each do |zone| %>
    <li class="col-lg-4 col-md-6 col-xs-12">
      <%= render zone %>
    </li>
  <% end %>

  <li class="col-lg-4 col-md-6 col-xs-12 add-application">
    <%= link_to new_zone_path, class: %W[item-box add] do %>
      <div>+</div>
    <% end %>
  </li>
</ul>

<%= prompt_modal(t('zones.modal.title'), t('zones.modal.body')) %>
