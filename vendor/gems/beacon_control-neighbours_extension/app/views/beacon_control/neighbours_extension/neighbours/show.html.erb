<%= javascript_include_tag 'neighbours_extension' %>
<%= stylesheet_link_tag 'neighbours_extension' %>

<% content_for :header_breadcrumbs do %>
  <span><%= link_to t('.title'), main_app.applications_path %></span>
  <span><%= @application.name %></span>
  <span><%= t('.breadcrumbs') %></span>
<% end %>

<%= render partial: 'shared/subheader',
           locals: {
               controller: 'beacon_control/neighbours_extension/neighbours',
               action: 'show'
           }
%>

<div class="neighbours" data-application-id="<%= application.id %>">
  <div class="row">
    <div class="col-sm-12">
      <div class="neighbours-box">
        <h2><%= t('.neighbours_title') %></h2>
        <div class="row neighbour-holder" id="neighbours-view-row">
          <div id="neighbours-svg" class="col-xs-6">
            <div id="neighbours-viewport" style="display: block; text-align: center;"></div>
          </div>
          <div class="col-xs-6 neighbour-holder">
            <div id="neighbours-menu">
              <%= render 'choose_zone', zones: zones %>
              <%= render 'available_zones', zones: zones %>
              <%= render 'neighbours_list', zones: [] %>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
