<%= form_tag beacon_control_kontakt_io_extension.beacons_path do %>
  <%= hidden_field_tag :sync, sync %>

  <div class="table-header">

    <div class="kontakt-io-table-buttons">
      <%= submit_tag t(".submit"),
                     class: "btn btn-success btn-static-width"
      %>
      <%= link_to t("helpers.links.cancel"),
                  beacon_control_kontakt_io_extension.beacons_path,
                  class: "btn btn-primary btn-static-width"
      %>
    </div>
  </div>

  <%= render 'list', form: true, beacons: beacons %>

  <div class="table-footer">
    <%= submit_tag t(".submit"), class: "btn btn-success btn-static-width" %>
  </div>

<% end %>
