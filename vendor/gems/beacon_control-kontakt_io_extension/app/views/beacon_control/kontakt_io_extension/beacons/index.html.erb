<% content_for :header_breadcrumbs do %>
  <span><%= t(".title") %></span>
<% end %>

<div class="beacons-table">

  <div class="table-header">
    <%= link_to t(".import"),
                beacon_control_kontakt_io_extension.import_beacons_path,
                class: "btn btn-success",
                method: :post
    %>
    <%= link_to t(".sync"),
                beacon_control_kontakt_io_extension.sync_beacons_path,
                class: "btn btn-success",
                method: :post
    %>
    <%= link_to t(".sync_with_reassign"),
                beacon_control_kontakt_io_extension.sync_beacons_path(reassign: true, venue: :force_update),
                class: "btn btn-success",
                method: :post
    %>
  </div>

  <table class="table table-list table-striped">
    <thead>
    <tr>
      <th><%= t('.uid') %></th>
      <th><%= t('.name') %></th>
      <th><%= t('.major') %></th>
      <th><%= t('.minor') %></th>
    </tr>
    </thead>
    <tbody>
    <% beacons.each do |beacon| %>
      <tr>
        <td><%= beacon.unique_id %></td>
        <td><%= beacon.name %></td>
        <td><%= beacon.major %></td>
        <td><%= beacon.minor %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>